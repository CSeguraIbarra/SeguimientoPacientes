<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Proyect</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>

<body>
    <div class="header">
        <div class="title">REGISTRARSE</div>
    </div>
    <div class="container">
        <div class="login_box">
            <div class="text1">Registro</div>
            <form action="/usuarios/save" method="post">
                <div><label class="text2" for="fotografia_path">Fotografia</label></div>
                <div><input class="itext1" type="file" name="fotografia_path"></div>
                <div><label class="text2" for="nombre">Nombre</label></div>
                <div><input class="itext1" type="text" name="nombre" placeholder=""></div>
                <div><label class="text2" for="apellidos">Apellidos</label></div>
                <div><input class="itext1" type="text" name="apellidos" placeholder=""></div>
                <div><label class="text2" for="cuenta">Cuenta</label></div>
                <div><input class="itext1" type="text" name="cuenta" placeholder="paco"></div>
                <div><label class="text2" for="clave">Contraseña</label></div>
                <div><input class="itext1" type="password" name="clave" placeholder="Contraseña"></div>
                <div><label class="text2" for="email">Email</label></div>
                <div><input class="itext1" type="email" name="email" placeholder="example@gmail.com"></div>
                <div><label class="text2" for="rol">Rol</label></div>
                <div>
                    <select class="select1" name="rol" id="rol" onchange="mostrarCampos()">
                        <option selected="true" disabled="disabled">Roles</option>
                        <option value="medico">Medico</option>
                        <option value="paciente">Paciente</option>
                    </select>
                </div>
                <div id="camposMedico" style="display: none;">
                    <label class="text2" for="especialidad">Especialidad</label><br>
                    <input class="itext1" type="text" name="especialidad" placeholder="Especialidad">
                </div>
                <div id="camposPaciente" style="display: none;">
                    <label class="text2" for="fecha_nacimiento">Fecha de Nacimiento</label><br>
                    <input class="itext1" type="date" name="fecha_nacimiento"><br>
                    <label class="text2" for="sexo">Sexo</label><br>
                    <select class="select1" name="sexo">
                        <option selected="true" disabled="disabled">Sexo</option>
                        <option value="masculino">Masculino</option>
                        <option value="femenino">Femenino</option>
                    </select><br>
                    <label class="text2" for="telefono">Teléfono</label><br>
                    <input class="itext1" type="text" name="telefono" placeholder="Teléfono">
                </div>
                <div><input type="submit" value="Crear Cuenta" class="btn1"></div>
            </form>
            <div><span class="text2">¿Ya tienes cuenta?</span><a class="ref1" href="/">Inicia Sesión</a></div>
        </div>
    </div>

    <script>
        function mostrarCampos() {
            var rolSeleccionado = document.getElementById("rol").value;

            // Obtener referencias a los elementos de los campos específicos
            var camposMedico = document.getElementById("camposMedico");
            var camposPaciente = document.getElementById("camposPaciente");

            // Ocultar ambos conjuntos de campos
            camposMedico.style.display = "none";
            camposPaciente.style.display = "none";

            // Mostrar los campos según el rol seleccionado
            if (rolSeleccionado === "medico") {
                camposMedico.style.display = "block";
            } else if (rolSeleccionado === "paciente") {
                camposPaciente.style.display = "block";
            }
        }
    </script>
</body>

</html>
